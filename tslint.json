{
  "extends": ["tslint-config-airbnb", "tslint-react", "tslint-config-prettier"],
  "rules": {
    "adjacent-overload-signatures": true,
    "ban-comma-operator": true,
    "class-name": true,
    "cyclomatic-complexity": true,
    "forin": true,
    "import-blacklist": [true, "lodash", "material-ui", "material-ui-icons", "rxjs"],
    "interface-name": [true, "never-prefix"],
    "jsdoc-format": true,
    "jsx-boolean-value": [true, "never"],
    "label-position": true,
    "max-file-line-count": [true, 300],
    "member-access": [true, "no-public"],
    "member-ordering": [
      true,
      {
        "order": "statics-first"
      }
    ],
    "no-any": true,
    "no-arg": true,
    "no-bitwise": true,
    "no-conditional-assignment": true,
    "no-consecutive-blank-lines": true,
    "no-duplicate-super": true,
    "no-empty": true,
    "no-floating-promises": true,
    "no-for-in-array": true,
    "no-implicit-dependencies": [true, "dev"],
    "no-inferrable-types": true,
    "no-namespace": true,
    "no-object-literal-type-assertion": true,
    "no-reference": true,
    "no-return-await": true,
    "no-shadowed-variable": true,
    "no-string-literal": true,
    "no-string-throw": true,
    "no-switch-case-fall-through": true,
    "no-unused-expression": true,
    "no-use-before-declare": true,
    "object-literal-sort-keys": [true, "shorthand-first"],
    "one-line": [true, "check-catch", "check-else", "check-finally", "check-open-brace"],
    "ordered-imports": [
      true,
      {
        "grouped-imports": true,
        "import-sources-order": "lowercase-last",
        "named-imports-order": "lowercase-last"
      }
    ],
    "prefer-for-of": true,
    "prefer-object-spread": true,
    "promise-function-async": true,
    "restrict-plus-operands": true,
    "strict-boolean-expressions": [true, "allow-null-union"],
    "triple-equals": [true, "allow-undefined-check"],
    "typedef": [true, "parameter", "property-declaration"],
    "typedef-whitespace": [
      true,
      {
        "call-signature": "nospace",
        "index-signature": "nospace",
        "parameter": "nospace",
        "property-declaration": "nospace",
        "variable-declaration": "nospace"
      }
    ],
    "unified-signatures": true,
    "use-isnan": true,
    "variable-name": [true, "ban-keywords", "check-format", "allow-pascal-case"]
  }
}
